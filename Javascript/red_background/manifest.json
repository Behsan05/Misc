{
    "manifest_version": 2,
    "name": "red background",
    "description": "This extension will change the background colour to red.",
    "version": "1.0",
    "background": { "scripts": ["red background.js"] },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "red background!"
    },
    "permissions": [
        "activeTab"
    ]
}